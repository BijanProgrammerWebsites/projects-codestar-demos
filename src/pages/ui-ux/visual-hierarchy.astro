---
import '@styles/index.scss';
import '@styles/ui-ux.scss';

import avatarImage from '@assets/svgs/avatar.svg';
import {Image} from 'astro:assets';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
        />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>UI/UX</title>
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />

        <script src="@scripts/PhaseF05-Best-Practices.ts"></script>
    </head>
    <body>
        <h1><a href="./">Best Practices</a>: Visual Hierarchy</h1>

        <article class="visual-hierarchy">
            <div class="card">
                <Image src={avatarImage} alt="user's avatar" loading="eager" />
                <div class="info">
                    <h2>Someone Something</h2>
                    <div class="field">
                        <div class="label">email</div>
                        <div class="content">someone@somewhere.something</div>
                    </div>
                    <div class="field">
                        <div class="label">phone</div>
                        <div class="content">+989123456789</div>
                    </div>
                    <div class="field">
                        <div class="label">website</div>
                        <div class="content">somewhere.something</div>
                    </div>
                </div>
            </div>
        </article>

        <button id="toggle-status-button">Toggle Status</button>
    </body>
</html>
